{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkflowGraph",
  "type": "object",
  "required": ["version", "meta", "nodes", "connections"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of the graph schema"
    },
    "meta": {
      "type": "object",
      "required": ["id", "name", "createdAt", "updatedAt", "nodesCount", "connectionsCount"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "nodesCount": { "type": "integer", "minimum": 0 },
        "connectionsCount": { "type": "integer", "minimum": 0 }
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "label", "position", "controls"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "label": { "type": "string" },
          "position": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            }
          },
          "controls": { "type": "object" }
        }
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "source", "sourceOutput", "target", "targetInput"],
        "properties": {
          "id": { "type": "string" },
          "source": { "type": "string" },
          "sourceOutput": { "type": "string" },
          "target": { "type": "string" },
          "targetInput": { "type": "string" }
        }
      }
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "text", "position", "size"],
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string" },
          "position": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            }
          },
          "size": {
            "type": "object",
            "properties": {
              "width": { "type": "number" },
              "height": { "type": "number" }
            }
          },
          "links": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
